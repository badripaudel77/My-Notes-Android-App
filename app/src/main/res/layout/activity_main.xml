<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:background="@drawable/note"
    tools:context="com.example.nepali_english.mynotes.MainActivity">
    <!--    shade the background-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#34514848">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="281dp"
            android:layout_height="153dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:padding="5dp"
            app:srcCompat="@drawable/note_front_round" />

        <TextView
            android:id="@+id/foodie_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="casual"
            android:gravity="center"
            android:padding="5dp"
            android:text="My Notes"
            android:textColor="@color/foodie_text_color"
            android:textSize="60dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/entry_login_btn"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/gradient_btn"
            android:padding="4dp"
            android:text="Sign In"
            android:textColor="@color/text_color_btn_gradient"
            android:textSize="20sp" />

        <Button
            android:id="@+id/entry_register_btn"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/gradient_btn"
            android:padding="5dp"
            android:text="Sign Up"
            android:textColor="@color/text_color_btn_gradient"
            android:textSize="20sp" />

    </LinearLayout>

    <!--    for others login etc pick linear layout-->
</RelativeLayout>