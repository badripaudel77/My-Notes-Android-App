<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical"
    tools:context="com.example.nepali_english.mynotes.CreateNewNoteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--   add scrolling behavior  -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editNoteTitle"
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/background_input_field"
                    android:ems="10"
                    android:hint="Enter Title"
                    android:inputType="textPersonName"
                    android:padding="15dp"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/editNoteDesc"
                    android:layout_width="match_parent"
                    android:layout_height="186dp"
                    android:background="@drawable/background_input_field"
                    android:ems="10"
                    android:hint="Enter Description"
                    android:padding="15dp"
                    android:textSize="24sp" />

                <Switch
                    android:id="@+id/mark_imp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:padding="15dp"
                    android:text="Mark As Important"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/submit_create_new_note_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:background="@android:color/holo_blue_dark"
                    android:text="Create Note"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/go_to_all_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/google_background"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Go To All Notes"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</LinearLayout>